<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <title>GarbageCollection - Detailed View</title>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-light bg-light">
                <a href="/home">Home</a> |
                <a href="/app">App</a> |
                <a href="/complainments">Complanment</a>
                <a href="/reports">Reports</a>
            </nav>
        </div>
        <div class="container">
            ID: {{id}}</br>
            STATUS: {{status}}</br>
            TYPE: {{complainmentType}}</br>
            SUBMITTER EMAIL: {{submitter}}</br>
            DESCRIPTION: {{description}}</br>
            POSITION: </br>
            LATITUDE: {{position.latitude}}</br>
            LONGITUDE: {{position.longitude}}</br>
            SUBMISSION TIME: {{complainmentSubmitTime}}</br>
            REVIEW STARTED: {{complainmentProcessingStartTime}}</br>
            REVIEW CLOSED: {{complainmentCloseTime}}</br>
            {% if rejectionMessage %}
                REJECTION MESSAGE: {{rejectionMessage}}
            {% endif %}
            {% if confirmationMessage %}
                CONFIRMATION MESSAGE: {{confirmationMessage}}
            {% endif%}
        </div>

        <div class="container">
            <a href="{{ path('app_admin_complainments_process', {'complainmentId': id}) }}" class="btn btn-primary btn-sm">Review Complainment</a>
        </div>
    </body>
</html>
